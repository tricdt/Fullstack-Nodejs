<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    .btn-edit {
        outline: none;
        border: none;
        background: orange;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }

    .btn-delete {
        outline: none;
        border: none;
        background: #ce3232;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
</style>

<body>
    <table class="table table-hover">
        <thead>
            <tr style="text-align: center">
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            <% for( let index=0; index < dataTable.length; index++ ) { %>
                <tr>
                    <th scope="row">
                        <%= dataTable[index].email %>
                    </th>
                    <td>
                        <%= dataTable[index].firstName %>
                    </td>
                    <td>
                        <%= dataTable[index].lastName %>
                    </td>
                    <td>
                        <%= dataTable[index].address %>
                    </td>
                    <td>
                        <a href="/edit-crud?id=<%= dataTable[index].id %> " class="btn-edit" type="button"> Edit</a>
                        <a href="/delete-crud?id=<%= dataTable[index].id %> " class="btn-delete" type="button">
                            Delete</a>

                    </td>
                </tr>
                <% } %>

        </tbody>
    </table>
</body>

</html>